@model IEnumerable<MiniMe.Models.Link>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            DateCreated
        </th>
        <th>
            ShortCode
        </th>
        <th>
            DestinationUrl
        </th>
        <th>
            AccessCount
        </th>
        <th>
            LastAccessed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestinationUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastAccessed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LinkID }) |
            @Html.ActionLink("Details", "Details", new { id=item.LinkID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LinkID })
        </td>
    </tr>
}

</table>
